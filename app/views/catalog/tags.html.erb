<dl id = 'articles'>
  <% for article in @articles %>
      <dt>
        <%= link_to article.name, :action => 'show', :id => article %>
        <%= link_to '+', :controller => 'cart', :action => 'add', :id => article, :remote => true %>

      </dt>
      <% for designer in article.designers %>
          <dd><%= designer.name %></dd>
      <% end %>
      <dd><%= sprintf("Precio: %.2f â‚¬", article.price) %> </dd>
      <dd><small>Proveedor: <%= article.provider.name %></small></dd>
      <dd>Tags: <%= raw article.tags.map {
         |t| link_to t.name, :action => 'tags', "id" => t.id
      }.join(', ') %></dd>
  <% end %>
</dl>
