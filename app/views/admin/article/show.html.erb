<dl>
  <dt>Name</dt>
  <dd><%= @article.name %></dd>
  <dt>Provider</dt>
  <dd><%= @article.provider.name %></dd>
  <dt>Provided at</dt>
  <dd><%= @article.provided_at.strftime("%d/%m/%Y at %I:%M%p") %></dd>
  <dt>Designers</dt>
  <dd><%= @article.designer_names %></dd>
  <dt>Description</dt>
  <%= RedCloth.new(@article.description).to_html.html_safe if @article.description %>
  <dt>Price</dt>
  <dd><%= @article.price %></dd>
</dl>

<%= link_to 'Edit', :action => 'edit', :id => @article %> |
<%= link_to 'Back', :action => 'index' %>
